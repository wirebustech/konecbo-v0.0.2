# Environment variables template for Azure deployment
# Copy this file and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:5432/database_name
# Example: postgresql://konecboadmin:YourPassword@konecbo-db.postgres.database.azure.com:5432/konecbo

# JWT Secret (Generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Application URLs
CLIENT_URL=https://your-app-name.azurewebsites.net
API_URL=https://your-app-name.azurewebsites.net/api

# Node Environment
NODE_ENV=production

# Server Port (Azure sets this automatically, but you can specify)
PORT=8080

# Firebase Configuration (if using Firebase features)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# Optional: Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Optional: Azure Storage (for file uploads)
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=uploads

# Security
CORS_ORIGIN=https://your-app-name.azurewebsites.net
SESSION_SECRET=your-session-secret-key

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
